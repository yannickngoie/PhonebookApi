<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title> Phone Book </title>
</head>

<body>
    @RenderBody()
    <div class="container">

        <div class="phone--book">

            <div class="phone--book-header">
                <h1> Phone Book Simple App by Yannick</h1>
            </div>
            <div class="pb-all">
                <div class="phone--book-top">
                    <div class="phone--book-top-search">
                        <div class="form-control">
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" id="pb-search" placeholder="Search for name">
                                </div>
                                <div class="col-md-6">
                                    <button id="pb-add">Add New Contact</button>
                                    <button id="pb-cancel">Cancel</button>
                                </div>
                            </div>
                        </div>
                        <div class="phone--book-top-addnew">

                        </div>

                    </div>
                </div>

                <div class="phone--book-middle">
                    <div class="phone-book-middle-newentry">
                        <form  method ="post" id ="entry-form" >
                            <div class="row">

                                <div class="col-md-4">
                                    <input type="text" id="pb-newentry-name" placeholder="Enter name" name="name" required>
                                </div>
                                <div class="col-md-4">
                                    <input type="text" id="pb-newentry-phone" placeholder="XXXXXXXXXX" name="phone" required pattern="^[0-9]{10}$">
                                </div>
                                <div class="col-md-4">
                                    <input type="submit" id="pb-newentry-btn" onclick="addData()" value="Add To contacts">
                                </div>
                            </div>
                        </form>


                    </div>
                </div>

                <div class="phone--book-bottom">
                    <div class="phone--book-bottom-table">
                        <table class="table" id="table">
                            <thead>
                            <th>#</th>
                            <th>Contact Name</th>
                            <th>Contact Phone Number</th>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <style>
   @@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap');
    *{
        font-family: 'Roboto', sans-serif !important;
    }
    .phone--book {
        padding: 50px;
    }

    .phone--book-header h1 {
        text-align: center;
        color: #001f3f;
        margin: 20px 0;
        font-size: 2rem;
    }

    .phone--book-header {
        margin-bottom: 30px;
    }

    .phone--book-top {
    }

    .form-control {
        padding: 30px;
        text-align: center;
        border: none;
    }
    input[type="text"] {
        width: 100%;
        padding: 8px;
        border: 1px solid #000;
        outline: none;
    }

        button, input[type="submit"] {
            color: #fff;
            text-decoration: none;
            text-transform: uppercase;
            padding: 8px 15px;
            background: #001f3f;
            text-align: center;
            transition: 0.5s;
            font-weight: 700;
            border: none;
            cursor: pointer;
            outline: none;
        }
            button:focus, input[type="submit"]:focus {
                outline: none;
            }
            button:hover, input[type="submit"]:hover {
                color: #001f3f;
                background: #fff;
                transform: 1.5;
                box-shadow: 0 0 0 2px #001f3f;
            }
    .phone--book-middle {
        padding: 30px;
        display: none;
    }
    #pb-cancel{
        display: none;
    }
    .phone--book-top,
    .phone--book-middle,
    .phone--book-bottom{
        margin: 10px;

    }
    .pb-all{
        padding: 30px;
        border: 1px solid #bfbcbc;
    }


    </style>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>

    <script>

        $(document).ready(function () {
          
                $('#entry-form').on('submit', function (e) {
                    reloadData();
                });

            $('#pb-add').on('click', function () {
                $(this).hide();
                $('#pb-cancel').fadeIn(2);
                $('.phone--book-middle').fadeIn(1000);
            });
            $('#pb-cancel').on('click', function () {
                $(this).hide();
                $('#pb-add').fadeIn(2);
                $('.phone--book-middle').fadeOut(1000);
            });
             

            $.ajax({
                url: 'https://localhost:44364/api/Entries',
                dataType: 'json',
                success: function (data) {
                    for (var i = 0; i < data.length; i++) {
                        var row = $('<tr><td>' + data[i].id + '</td><td>' + data[i].name + '</td><td>' + data[i].phoneNumber + '</td></tr>');
                        $('#table').append(row);

                    }
                    console.log(data);


                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert('Error: ' + textStatus + ' - ' + errorThrown);
                }
            });

        })


        function reloadData()
        {
            alert('New contact added !!!!!!');
            $.ajax({
                url: 'https://localhost:44364/api/Entries',
                dataType: 'json',
                success: function (data) {
                    for (var i = 0; i < data.length; i++) {
                        var row = $('<tr><td>' + data[i].id + '</td><td>' + data[i].name + '</td><td>' + data[i].phoneNumber + '</td></tr>');
                        $('#table').append(row);

                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert('Error: ' + textStatus + ' - ' + errorThrown);
                }
            });

        }
        //search data
        $('#pb-search').on('keyup', function () {
            window.search_query = $(this).val();
            fetch('https://localhost:44364/api/Entries')
                .then(response => response.text())
                .then(data => {
                    var content = JSON.parse(data);

                    var filteredNames = content.filter(function (el) {
                      

                        return el.name.toLowerCase().indexOf(search_query.toLowerCase()) !== -1;


                    });

                    $('#table tbody').html('');
                    for (var i = 0; i < filteredNames.length; i++) {
                        var row = $('<tr><td>' + filteredNames[i].id + '</td><td>' + filteredNames[i].name + '</td><td>' + filteredNames[i].phoneNumber + '</td></tr>');
                        $('#table').append(row);

                    }
                });
        })

        function addData() {
            var c_details = {
                name: $('#pb-newentry-name').val(),
                phonenumber: $('#pb-newentry-phone').val(),
            }
          
            $.ajax({
                url: 'https://localhost:44364/api/Entries',
                type: 'post',
                dataType: 'json',
                contentType: 'application/json',
                sucess: function (data) {
                    console.log(data)

                },
                data: JSON.stringify(c_details)
            })
           
          
      
        } 
    </script>
</body>
</html>